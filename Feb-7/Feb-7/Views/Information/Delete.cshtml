@model Feb_7.Models.Information

@{
    ViewBag.Title = "Delete";
}

    <style>
        div {
            color: darkgray
        }
    </style>

    <div>
        <section class="page-section" id="portfolio">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase text-white">Employee</h2>
                    <h3 class="section-heading text-white">
                        Are you sure you want to delete this?
                    </h3>
                </div>
                <div class="row flex-row">
                    <h4>Information</h4>
                    <hr />


                    <div class="col-md-8">
                        <table class="table table-hover table-dark">
                            <tr>
                                <td>First Name</td>
                                <td>@Html.DisplayFor(model => model.First_Name)</td>
                            </tr>
                            <tr>
                                <td>Last Name</td>
                                <td>@Html.DisplayFor(model => model.Last_Name)</td>
                            </tr>
                            <tr>
                                <td>E-mail</td>
                                <td>@Html.DisplayFor(model => model.E_mail)</td>
                            </tr>
                            <tr>
                                <td>Phone</td>
                                <td>@Html.DisplayFor(model => model.Phone)</td>
                            </tr>
                            <tr>
                                <td>Age</td>
                                <td>@Html.DisplayFor(model => model.Age)</td>
                            </tr>
                            <tr>
                                <td>Job Title</td>
                                <td>@Html.DisplayFor(model => model.Job_Title)</td>
                            </tr>
                            <tr>
                                <td>Gender</td>
                                <td>
                                    @if (Model.Gender == true)
                                    {
                                        <span>Female</span>
                                    }
                                    else
                                    {
                                        <span>Male</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>CV</td>
                                <td><a href="~/CVs/@Model.CV" download>Download CV</a></td>
                            </tr>
                            <tr>
                                <td>Photo</td>
                                <td><img src="~/image/@Model.Image" width="100" /></td>
                            </tr>

                        </table>
                        <p>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                                    @Html.ActionLink("Back to List", "Index" , new { @class = "btn btn-warning" })
                                </div>
                            }
                        </p>
                    </div>
                </div>
            </div>

        </section>


    </div>
